/**
  * @brief GPIO Initialization Function
  * @param None
  * @retval None
  */
static void MX_GPIO_Init(void)
{
  GPIO_InitTypeDef GPIO_InitStruct = {0};

  /* GPIO Ports Clock Enable */
  __HAL_RCC_GPIOD_CLK_ENABLE();
  __HAL_RCC_GPIOA_CLK_ENABLE();
  __HAL_RCC_GPIOB_CLK_ENABLE();

  /*Configure GPIO pin Output Level */
  HAL_GPIO_WritePin(GPIOA, GPIO_PIN_1, GPIO_PIN_RESET);

  /*Configure GPIO pin : PA1 */
  GPIO_InitStruct.Pin = GPIO_PIN_1;
  GPIO_InitStruct.Mode = GPIO_MODE_OUTPUT_PP;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  GPIO_InitStruct.Speed = GPIO_SPEED_FREQ_LOW;
  HAL_GPIO_Init(GPIOA, &GPIO_InitStruct);

  /*Configure GPIO pins : PA2 PA3 */
  GPIO_InitStruct.Pin = GPIO_PIN_2|GPIO_PIN_3;
  GPIO_InitStruct.Mode = GPIO_MODE_IT_FALLING;
  GPIO_InitStruct.Pull = GPIO_PULLUP;
  HAL_GPIO_Init(GPIOA, &GPIO_InitStruct);

  /* EXTI interrupt init*/
  HAL_NVIC_SetPriority(EXTI2_IRQn, 5, 0);
  HAL_NVIC_EnableIRQ(EXTI2_IRQn);

  HAL_NVIC_SetPriority(EXTI3_IRQn, 5, 0);
  HAL_NVIC_EnableIRQ(EXTI3_IRQn);

}

/* USER CODE BEGIN 4 */
/*H√†m n√†y s·∫Ω ƒë∆∞·ª£c g·ª?i khi c√≥ d·ªØ li·ªáu t·ª´ m√°y t√≠nh g·ª≠i xu·ªëng
 * */
void HAL_UART_RxCpltCallback(UART_HandleTypeDef *huart)
{
	HAL_UART_Receive_IT(&huart1, (uint8_t*) &t[2], 18);// ƒ?ƒÉng k√≠ n∆°i l∆∞u d·ªØ li·ªáu t·ª´ m√°y t√≠nh g·ª≠i xu·ªëng
	strncpy(data_storage,"",20);						// x√≥a n∆°i l∆∞u tr·ªØ ƒë·ªÉ nh·∫≠n d·ªØ li·ªáu m·ªõi
	strncpy(data_storage,&t[2],strlen(&t[2])-2);		// x√≥a n∆°i l∆∞u tr·ªØ ƒë·ªÉ nh·∫≠n d·ªØ li·ªáu m·ªõi
	strncpy(t,"",20);									// x√≥a n∆°i l∆∞u tr·ªØ ban ƒë·∫ßu ƒë·ªÉ chu·∫©n b·ªã nh·∫≠n d·ªØ li·ªáu ti·∫øp theo
	osSemaphoreRelease (semaphore_uartHandle);// gi·∫£i ph√≥ng semaphore
}
/*H√†m n√†y s·∫Ω ƒë∆∞·ª£c g·ª?i khi c√≥ ng·∫Øt ngo√†i x·∫£y ra */
void HAL_GPIO_EXTI_Callback(uint16_t GPIO_Pin)
{
	if(GPIO_Pin==GPIO_PIN_3)				//N·∫øu l√† ng·∫Øt ngo√†i 3 th√¨ ta s·∫Ω ƒë·ªïi mode
	{
		current_Time=HAL_GetTick();
		if(current_Time-last_Time>300)		// ƒ?·∫£m b·∫£o gi·ªØa 2 l·∫ßn ng·∫Øt l√† 300ms nh·∫±m ch·ªëng d·ªôi ph√≠m
		{
			if(mode==1)
			{
				mode=2;
				flag=1;
			}
			else
				mode=1;
		}
		last_Time=current_Time;
	}
	if(GPIO_Pin==GPIO_PIN_2)			// N·∫øu l√† ng·∫Øt ngo√†i 2 th√¨ ta s·∫Ω tƒÉng chu k√¨ l√™n 1
	{
		current_Time=HAL_GetTick();
		if((current_Time-last_Time>300)&&(mode==1))  // ch·ª? 300ms ƒë·ªÉ ch·ªëng nhi·ªÖu v√† ph·∫£i ·ªü ch·∫ø ƒë·ªô 1
		{
			cycle=cycle+1;
		}
		last_Time=current_Time;
	}
	__HAL_GPIO_EXTI_CLEAR_IT(GPIO_Pin);  /// x√≥a c·ª? b√°o ng·∫Øt
}
void display_mode_1(DHT_DataTypedef data) // H√†m hi·ªÉn th·ªã d·ªØ li·ªáu ·ªü ch·∫ø ƒë·ªô 1, tham s·ªë truy·ª?n v√†o l√† 1 struct c√≥ ch·ª©a nhi·ªát ƒë·ª?, ƒë·ªô ·∫©m
{
	char row_1[16], row_2[16];

	lcd_put_cur(0,0);
	strcpy(row_1,"Mode:1");
	strcpy(&row_1[6]," Cycle:");  // copy chu·ªói v√†o m·∫£ng
	sprintf(&row_1[13],"%d",cycle);  // h√†m chuy·ªÉn ƒë·ªïi s·ªë sang chu·ªói
	lcd_send_string(row_1);      // h√†m hi·ªÉn th·ªã ra LCD

	lcd_put_cur(1,0);
	strcpy(row_2,"ND:");
	sprintf(&row_2[3],"%d",data.Temperature);
	strcpy(&row_2[5]," DA:");
	sprintf(&row_2[9],"%d",data.Humidity);
	lcd_send_string(row_2);
}
void display_mode_2(DHT_DataTypedef data)// // H√†m hi·ªÉn th·ªã d·ªØ li·ªáu ·ªü ch·∫ø ƒë·ªô 2, tham s·ªë truy·ª?n v√†o l√† 1 struct c√≥ ch·ª©a nhi·ªát ƒë·ª?, ƒë·ªô ·∫©m
{
	char row_2[5];
	lcd_clear();
	lcd_put_cur(0,0);
	lcd_send_string("Mode:2");
	if(para==1)// n·∫øu y√™u c·∫ßu nhi·ªát ƒë·ªô s·∫Ω hi·ªÉn th·ªã nhi·ªát ƒë·ªô
	{
		lcd_put_cur(1,0);
		strcpy(row_2,"ND:");
		sprintf(&row_2[3],"%d",data.Temperature);
		lcd_send_string(row_2);
	}
	if(para==2)// n·∫øu y√™u c·∫ßu ƒë·ªô ·∫©m s·∫Ω hi·ªÉn th·ªã ƒë·ªô ·∫©m
	{
		lcd_put_cur(1,0);
		strcpy(row_2,"DA:");
		sprintf(&row_2[3],"%d",data.Humidity);
		lcd_send_string(row_2);
	}
}
void display_cycle() // H√†m hi·ªÉn th·ªã chu k√¨
{
	if(mode==1)
	{
		if((cycle>9)||(cycle<2))// gi·ªõi h·∫°n chu k√¨ t·ª´ 2-9 s
		{
			cycle=2;
		}
		lcd_put_cur(0,0);
		lcd_send_string("Mode:1");
		char row_1[10];
		lcd_put_cur(0,6);
		strcpy(row_1," Cycle:");
		sprintf(&row_1[7],"%d",cycle);
		lcd_send_string(row_1);
	}
}
void get_data(char *p)// h√†m x·ª≠ l√≠ d·ªØ li·ªáu t·ª´ m√°y t√≠nh truy·ª?n xu·ªëng, tham s·ªë truy·ª?n v√†o l√† ƒë·ªãa ch·ªâ c·ªßa m·∫£ng l∆∞u tr·ªØ d·ªØ li·ªáu
{
	uint8_t cycle_1, m, n;
	if(mode == 1)  // n·∫øu l√† mode 1 th√¨ d·ªØ li·ªáu s·∫Ω l√† chu k√¨ v√† s·∫Ω chuy·ªÉn ƒë·ªïi t·ª´ k√≠ t·ª± sang s·ªë
	{
		cycle_1=atoi(p);
		if(cycle_1>0)
		{
			cycle=cycle_1;
		}
	}
	if(mode == 2) // N·∫øu l·∫ß mode 2 th√¨ d·ªØ li·ªáu l√† th√¥ng s·ªë nhi·ªát ƒë·ªô ho·∫∑c ƒë·ªô ·∫©m
	{
		m=strcmp(p,"nhiet do ");// so s√°nh chu·ªói nh·∫≠n ƒë∆∞·ª£c
		n=strcmp(p,"do am ");
		if((m==0)&&(n!=0))
		{
			para=1;             // n·∫øu l√† nhi·ªát ƒë·ªô para=1
			strncpy(p,"",20);
		}
		if((m!=0)&&(n==0))
		{
			para=2;				 // n·∫øu l√† ƒë·ªô ·∫©m para=2
			strncpy(p,"",20);
		}
		flag=1;  // b·∫≠t c·ª? b√°o l√† hi·ªÉn th·ªã d·ªØ li·ªáu y√™u c·∫ßu t·ª´ m√°y t√≠nh g·ª≠i xu·ªëng
	}
}
void transmit_data_from_computer()// H√Äm truy·ª?n d·ªØ li·ªáu l√™n m√°y t√≠nh
{
	if(mode==1)// n·∫øu l√† mode 1 s·∫Ω truy·ª?n ƒë·∫ßy ƒë·ªß
	{
		char row_2[24];
		strcpy(row_2,"Nhiet do:");
		sprintf(&row_2[9],"%d",data.Temperature);
		strcpy(&row_2[11]," Do am:");
		sprintf(&row_2[18],"%d",data.Humidity);
		strcpy(&row_2[20],"\n");
		HAL_UART_Transmit(&huart1,(uint8_t*)row_2,21,200);
	}
	if(mode==2)  // n·∫øu l√† mode 2 s·∫Ω truy·ª?n theo y√™u c·∫ßu
	{
		if(para==1)
		{
			char row_2[13];
			strcpy(row_2,"Nhiet do:");
			sprintf(&row_2[9],"%d",data.Temperature);
			strcpy(&row_2[11],"\n");
			HAL_UART_Transmit(&huart1,(uint8_t*)row_2,12,100);
		}
		if(para==2)
		{
			char row_2[10];
			strcpy(row_2,"Do am:");
			sprintf(&row_2[6],"%d",data.Humidity);
			strcpy(&row_2[8],"\n");
			HAL_UART_Transmit(&huart1,(uint8_t*)row_2,9,100);
		}
	}
}
/* USER CODE END 4 */

/* USER CODE BEGIN Header_Task_control */
/**
  * @brief  Function implementing the Task_ConTrol thread.
  * @param  argument: Not used
  * @retval None
  */
/* USER CODE END Header_Task_control */
void Task_control(void const * argument)
{
  /* USER CODE BEGIN 5 */
  /* Infinite loop */
  for(;;)
  {
	if(mode==1)
	{
		display_cycle(); // hi·ªÉn th·ªã chu k√¨ n·∫øu c√≥ c·∫≠p nh·∫≠t nh·∫±m ƒë·∫£m b·∫£o t√≠nh th·ª?i gian th·ª±c
		currentTime=uwTick;
		if(currentTime-lastTime>cycle*1000)// ƒë√∫ng chu k√¨ nh∆∞ ƒë√£ ƒë·∫∑t th√¨ s·∫Ω hi·ªÉn th·ªã nh∆∞ng th√¥ng s·ªë c·∫ßn thi·∫øt
		{
			DHT_GetData(&data);
			display_mode_1(data);
			lastTime=currentTime;
			transmit_data_from_computer();
		}
	}
	if((mode==2)&&(flag==1))// n·∫øu l√† mode 2 v√† c√≥ y√™u c·∫ßu truy·ª?n v√† hi·ªÉn th·ªã th√¥ng s·ªë th√¨ s·∫Ω hi·ªÉn th·ªã th√¥ng s·ªë y√™u c·∫ßu,
	{
		DHT_GetData(&data);
		display_mode_2(data);
		transmit_data_from_computer();
		flag=0;// x√≥a c·ª? b√°o g·ª≠i th√¥ng s·ªë y√™u c·∫ßu
	}
    osDelay(1);
  }
  /* USER CODE END 5 */
}

/* USER CODE BEGIN Header_Task_getdata */
/**
* @brief Function implementing the Task_GetData thread.
* @param argument: Not used
* @retval None
*/
/* USER CODE END Header_Task_getdata */
void Task_getdata(void const * argument)
{
  /* USER CODE BEGIN Task_getdata */
  /* Infinite loop */
  for(;;)
  {
	osSemaphoreWait(semaphore_uartHandle,osWaitForever);// ƒë·ª£i semaphore t·ª´ ng·∫Øt uart
	get_data(data_storage);                           // x·ª≠ l√≠ d·ªØ li·ªáu
  }
  /* USER CODE END Task_getdata */
}

/**
  * @brief  This function is executed in case of error occurrence.
  * @retval None
  */
void Error_Handler(void)
{
  /* USER CODE BEGIN Error_Handler_Debug */
  /* User can add his own implementation to report the HAL error return state */
